# Copy this file to terraform.tfvars and fill in your values

# AWS Region
aws_region = "ap-northeast-1"

# Project name
project_name = "mimiru"

# GitHub configuration
github_org  = "your-github-org"
github_repo = "radio_site_backend"

# Database password (use a strong password)
db_password = "your-secure-database-password"

# JWT secret (use a long random string)
jwt_secret = "your-jwt-secret-key"

# S3 bucket name (must be globally unique)
s3_bucket_name = "mimiru-audio-storage-your-unique-suffix"

# AWS credentials for application use
aws_access_key_id     = "your-aws-access-key-id"
aws_secret_access_key = "your-aws-secret-access-key"

# CloudFront private key (for signed URLs)
# Generate this with: openssl genrsa -out private_key.pem 2048
cloudfront_private_key = <<EOF
-----BEGIN RSA PRIVATE KEY-----
your-cloudfront-private-key-content
-----END RSA PRIVATE KEY-----
EOF